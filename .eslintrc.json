{
  "env": {
      "es6": true,
      "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
      "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "no-console": [
          "off"
      ],
      "camelcase": [2, {"properties": "always"}],
      "object-curly-spacing": [
          "error", "always"
      ]
  }
}